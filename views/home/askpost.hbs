<h1>Ask</h1>

<form action="/ask" method="POST" enctype="multipart/form-data">
    
<div class="form-group">

    <label for="title">Title</label>
    <input name="title" type="text" class="form-control" id="title" placeholder="enter title">

</div>
<div class="form-group">

    <label for="file">File upload / like error code screenshot</label>
    <input name="file" type="file" class="form-control"  multiple="multiple">

</div>

<div class="form-group">
    <label for="status">Question tag</label>

    <select name="status" id="status" class="form-control">
        <option value="array">Array</option>
        <option value="linked">Linked List</option>
        <option value="tree">Tree</option>
        <option value="graph">Graph</option>
        <option value="dynamic">Dynamic Programing</option>
    </select>
</div>

<div class="form-group">

    <label for="body">Body</label>
    <textarea name="body" cols="30" rows="8" type="text" class="form-control" id="body" placeholder="enter Description"></textarea>

</div>
<button type="submit" class="btn btn-primary">submit</button>

</form>